#version 330 core

// Input data
layout(location = 0) in vec3 position;
layout(location = 1) in vec2 vertexUV;

// Used in the fragment shader
out vec2 uv;

// Calculated in the actual program
uniform mat4 mvp;

void main()
{
	// Output position of the vertex : MVP * position
	gl_Position =  mvp * vec4(position, 1);

	// UV of the vertex
	uv = vertexUV;
}
